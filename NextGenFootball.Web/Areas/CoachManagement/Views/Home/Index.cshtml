@{
    ViewData["Title"] = "Coach Dashboard";
}

<div class="container coach-dashboard mt-5">
    <h1 class="text-center mb-5 fw-bold coach-dashboard-title">Coach Area</h1>

    <div class="row g-4 justify-content-center">
        <div class="col-md-5">
            <div class="card coach-section-card shadow border-0 h-100">
                <div class="card-header bg-transparent border-0 px-4 pt-4 pb-2">
                    <div class="d-flex align-items-center gap-2">
                        <span class="coach-icon coach-icon-choose">
                            <i class="bi bi-person-lines-fill"></i>
                        </span>
                        <h3 class="card-title mb-0 fw-semibold">Choose Starting 11</h3>
                    </div>
                </div>
                <div class="card-body d-flex flex-column justify-content-between px-4 pb-4 pt-2">
                    <p class="card-text text-muted mb-4">
                        Pick your starting lineup for the upcoming match. Select players, set formation, and finalize tactics.
                    </p>
                    <a asp-area="CoachManagement" asp-controller="Lineup" asp-action="Choose" class="btn coach-btn-choose11 w-100 fw-bold mt-auto">
                        <i class="bi bi-arrow-right-circle"></i> Set Starting 11
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card coach-section-card shadow border-0 h-100">
                <div class="card-header bg-transparent border-0 px-4 pt-4 pb-2">
                    <div class="d-flex align-items-center gap-2">
                        <span class="coach-icon coach-icon-upcoming">
                            <i class="bi bi-calendar-event"></i>
                        </span>
                        <h3 class="card-title mb-0 fw-semibold">Upcoming Matches</h3>
                    </div>
                </div>
                <div class="card-body d-flex flex-column justify-content-between px-4 pb-4 pt-2">
                    <p class="card-text text-muted mb-4">
                        View and manage upcoming fixtures. Check dates, opponents, and match details to stay prepared.
                    </p>
                    <a asp-area="CoachManagement" asp-controller="MatchUp" asp-action="Upcoming" class="btn coach-btn-upcoming w-100 fw-bold mt-auto">
                        <i class="bi bi-eye"></i> View Upcoming Matches
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<link rel="stylesheet" href="~/css/coach-dashboard.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">