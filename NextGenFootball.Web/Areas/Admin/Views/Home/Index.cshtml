@* Admin Dashboard: Each row has 3 cards, icons in each row are yellow, green, red. Uniform blue background, high-contrast text, icon color matches button color per row *@
<div class="container py-5">
    <h2 class="fw-bold text-center mb-5" style="color: #3458e7;">Admin Dashboard</h2>
    <div class="row g-4 justify-content-center">
        <!-- ROW 1: Yellow, Green, Red Icons -->
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0" style="background: #3458e7;">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <!-- Yellow -->
                            <i class="bi bi-people-fill" style="font-size: 3rem; color: #ffc107;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3" style="color: #fff;">Manage Users</h5>
                        <p class="card-text mb-4" style="color: #f8f9fa;">View, edit, and organize users.</p>
                    </div>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-warning btn-lg w-100 mt-auto fw-semibold">
                        <i class="bi bi-person-lines-fill"></i> Users
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0" style="background: #3458e7;">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <!-- Green -->
                            <i class="bi bi-shield-fill-check" style="font-size: 3rem; color: #198754;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3" style="color: #fff;">Manage Teams</h5>
                        <p class="card-text mb-4" style="color: #f8f9fa;">Add, edit and oversee teams.</p>
                    </div>
                    <a asp-area="" asp-controller="Team" asp-action="Index" class="btn btn-success btn-lg w-100 mt-auto fw-semibold">
                        <i class="bi bi-people"></i> Teams
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0" style="background: #3458e7;">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <!-- Red -->
                            <i class="bi bi-person-badge-fill" style="font-size: 3rem; color: #dc3545;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3" style="color: #fff;">Manage Players</h5>
                        <p class="card-text mb-4" style="color: #f8f9fa;">Control player profiles and stats.</p>
                    </div>
                    <a asp-area="" asp-controller="Player" asp-action="Index" class="btn btn-danger btn-lg w-100 mt-auto fw-semibold">
                        <i class="bi bi-person"></i> Players
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-4 justify-content-center mt-1">
        <!-- ROW 2: Yellow, Green, Red Icons -->
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0" style="background: #3458e7;">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <!-- Yellow -->
                            <i class="bi bi-building" style="font-size: 3rem; color: #ffc107;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3" style="color: #fff;">Manage Stadiums</h5>
                        <p class="card-text mb-4" style="color: #f8f9fa;">Edit stadium information and locations.</p>
                    </div>
                    <a asp-area="" asp-controller="Stadium" asp-action="Index" class="btn btn-warning btn-lg w-100 mt-auto fw-semibold">
                        <i class="bi bi-building-fill"></i> Stadiums
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0" style="background: #3458e7;">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <!-- Green -->
                            <i class="bi bi-person-video2" style="font-size: 3rem; color: #198754;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3" style="color: #fff;">Manage Coaches</h5>
                        <p class="card-text mb-4" style="color: #f8f9fa;">Maintain coach profiles and assignments.</p>
                    </div>
                    <a asp-area="" asp-controller="Coach" asp-action="Index" class="btn btn-success btn-lg w-100 mt-auto fw-semibold">
                        <i class="bi bi-person-video2"></i> Coaches
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0" style="background: #3458e7;">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <!-- Red -->
                            <i class="bi bi-calendar2-week-fill" style="font-size: 3rem; color: #dc3545;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3" style="color: #fff;">Manage Seasons</h5>
                        <p class="card-text mb-4" style="color: #f8f9fa;">Add or edit league seasons.</p>
                    </div>
                    <a asp-area="" asp-controller="Season" asp-action="Index" class="btn btn-danger btn-lg w-100 mt-auto fw-semibold">
                        <i class="bi bi-calendar2-week"></i> Seasons
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">