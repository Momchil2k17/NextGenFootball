@using NextGenFootball.Web.ViewModels.Referee.RefereeMatches
@model IEnumerable<MyMatchesViewModel>

@{
    ViewData["Title"] = "My Matches";
}

<link rel="stylesheet" href="~/css/my-matches.css" />

<h2 class="mb-4 display-6 fw-semibold text-primary">My Matches</h2>

@if (!Model.Any())
{
    <div class="alert alert-info shadow-sm rounded-3">
        <i class="bi bi-info-circle me-2"></i>
        You have no assigned matches.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table my-matches-table table-hover align-middle shadow-sm rounded-3 overflow-hidden">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Referees</th>
                    <th>Match</th>
                    <th>Stadium</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var match in Model)
                {
                    <tr>
                        <td>
                            <span class="fw-medium">@match.Date.ToString("yyyy-MM-dd")</span>
                            <div class="text-muted small">@match.Date.ToString("HH:mm")</div>
                        </td>
                        <td>
                            @await Html.PartialAsync("_RefereeNamesPartial", match)
                        </td>
                        <td>
                            @await Html.PartialAsync("_MatchTeamsLeaguePartial", match)
                        </td>
                        <td>
                            <span class="stadium-name">@match.StadiumName</span>
                        </td>
                        <td class="text-end">
                            <div class="d-flex flex-column align-items-end gap-1">
                                <a asp-area="" asp-controller="Match" asp-action="Details" asp-route-id="@match.MatchId"
                                   class="btn btn-outline-info btn-sm px-2 mb-1 w-100">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                @if (match.HasReport)
                                {
                                    <a asp-area="Referee"
                                       asp-controller="Match"
                                       asp-action="EditReport"
                                       asp-route-id="@match.MatchId"
                                       class="btn btn-warning btn-sm px-2 mb-1 w-100">
                                        <i class="bi bi-pencil-square"></i> Edit Report
                                    </a>
                                }
                                else
                                {
                                    <a asp-area="Referee"
                                       asp-controller="Match"
                                       asp-action="CreateReport"
                                       asp-route-id="@match.MatchId"
                                       class="btn btn-success btn-sm px-2 w-100">
                                        <i class="bi bi-plus-circle"></i> Create Report
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}