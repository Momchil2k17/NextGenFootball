@{
    ViewData["Title"] = "League Manager Dashboard";
    Layout = "_Layout";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
<link href="~/css/league-manager-dashboard.css" rel="stylesheet" />

<div class="container py-5 league-bg">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-2">League Manager</h1>
        <p class="lead text-muted">Manage your league's matches, assign referees, and keep everything running smoothly.</p>
    </div>

    <div class="row justify-content-center g-4">
        <!-- Add Match Card -->
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0 dark-card-1">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <i class="bi bi-plus-circle-fill text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3 text-white">Add New Match</h5>
                        <p class="card-text mb-4 text-light-50">Schedule a new match in the league calendar.</p>
                    </div>
                    <a asp-area="LeagueManager" asp-controller="Dashboard" asp-action="CreateMatch" asp-route-id="@ViewBag.LeagueId" class="btn btn-success btn-lg px-5 fw-semibold w-100 mt-auto">
                        <i class="bi bi-plus"></i> Add Match
                    </a>
                </div>
            </div>
        </div>
        <!-- Assign Referees Card -->
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0 dark-card-2">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <i class="bi bi-person-check-fill text-info" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3 text-white">Assign Referees</h5>
                        <p class="card-text mb-4 text-light-50">Assign referees to upcoming matches with ease.</p>
                    </div>
                    <a asp-area="LeagueManager" asp-controller="Dashboard" asp-action="Assignments" asp-route-id="@ViewBag.LeagueId" class="btn btn-info btn-lg px-5 fw-semibold w-100 mt-auto text-white">
                        <i class="bi bi-arrow-right-circle"></i> Assign
                    </a>
                </div>
            </div>
        </div>
        <!-- Matches Overview Card -->
        <div class="col-md-4">
            <div class="card h-100 shadow interactive-card card-hover border-0 dark-card-3">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="text-center w-100">
                        <div class="icon mb-4">
                            <i class="bi bi-megaphone-fill text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3 text-white">Create and Edit News</h5>
                        <p class="card-text mb-4 text-light-50">Create and edit news about the League.</p>
                    </div>
                    <a asp-area="" asp-controller="News" asp-action="Create" class="btn btn-warning btn-lg px-5 fw-semibold w-100 mt-auto text-dark">
                        <i class="bi bi-calendar-range"></i> Post news
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>