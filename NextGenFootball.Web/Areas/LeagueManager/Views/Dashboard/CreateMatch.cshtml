@using NextGenFootball.Web.ViewModels.Match;
@model MatchCreateViewModel;

@{
    ViewData["Title"] = "Add Match";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-1"><i class="bi bi-calendar-plus me-2"></i>@ViewData["Title"]</h2>
                    <p class="mb-0 small">Fill in the details to schedule a new match</p>
                </div>
                <div class="card-body">
                    <form asp-action="CreateMatch" asp-route-id="@Model.LeagueId" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="LeagueId" />

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="HomeTeamId" class="form-label fw-semibold">Home Team</label>
                                <select asp-for="HomeTeamId" class="form-select" id="homeTeam" aria-required="true" asp-items="@(new SelectList(Model.Teams, "Id", "Name"))">
                                    <option value="">-- Select Team --</option>
                                </select>
                                <span asp-validation-for="HomeTeamId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AwayTeamId" class="form-label fw-semibold">Away Team</label>
                                <select asp-for="AwayTeamId" class="form-select" id="awayTeam" aria-required="true" asp-items="@(new SelectList(Model.Teams, "Id", "Name"))">
                                    <option value="">-- Select Team --</option>
                                </select>
                                <span asp-validation-for="AwayTeamId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Round" class="form-label fw-semibold">Round</label>
                            <input asp-for="Round" class="form-control" type="number" min="1" max="99" placeholder="Enter round number" />
                            <span asp-validation-for="Round" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label fw-semibold">Date &amp; Time</label>
                            <input asp-for="Date" class="form-control" type="datetime-local" step="900" />
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="bi bi-plus-circle me-1"></i> Create Match
                            </button>
                            <a asp-action="Index" asp-route-id="@Model.LeagueId" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/match-team-filter.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}