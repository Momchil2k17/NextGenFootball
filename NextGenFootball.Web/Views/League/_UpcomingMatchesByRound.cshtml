@using NextGenFootball.Web.ViewModels.League
@model LeagueUpcomingMatchesViewModel

<div class="card mb-4 league-upcoming-matches-card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Upcoming Matches</h5>
    </div>
    <div class="card-body p-0">
        <link rel="stylesheet" href="~/css/league-upcoming-matches.css" />

        @if (Model.Rounds == null || !Model.Rounds.Any())
        {
            <div class="alert alert-info m-3">No upcoming matches scheduled.</div>
        }
        else
        {
            <div class="upcoming-matches-responsive-wrapper">
                @foreach (var round in Model.Rounds.OrderBy(r => r.RoundNumber))
                {
                    <h5 class="mt-4 mb-2 px-3">Round @round.RoundNumber</h5>
                    @if (round.Matches == null || !round.Matches.Any())
                    {
                        <div class="alert alert-secondary mx-3">No matches in this round.</div>
                    }
                    else
                    {
                        <table class="upcoming-matches-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th class="text-center">Home Team</th>
                                    <th class="upcoming-vs-cell"></th>
                                    <th class="text-center">Away Team</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var match in round.Matches)
                                {
                                    <tr class="upcoming-match-row"
                                        data-href="@($"/Match/Details/{match.MatchId}")"
                                        style="cursor:pointer;">
                                        <td data-label="Date">@match.Date.ToString("dd MMM yyyy, HH:mm")</td>
                                        <td data-label="Home Team" class="upcoming-home-team-cell text-center">
                                            <div class="upcoming-team-cell">
                                                <img src="@match.HomeTeamImageUrl"
                                                     alt="@match.HomeTeam" />
                                                <a asp-area="" asp-controller="Team"
                                                   asp-action="Details"
                                                   asp-route-id="@match.HomeTeamId"
                                                   class="upcoming-team-name-link"
                                                   tabindex="-1">
                                                    @match.HomeTeam
                                                </a>
                                            </div>
                                        </td>
                                        <td class="upcoming-vs-cell" data-label="">
                                            vs
                                        </td>
                                        <td data-label="Away Team" class="upcoming-away-team-cell text-center">
                                            <div class="upcoming-team-cell">
                                                <img src="@match.AwayTeamImageUrl"
                                                     alt="@match.AwayTeam" />
                                                <a asp-area="" asp-controller="Team"
                                                   asp-action="Details"
                                                   asp-route-id="@match.AwayTeamId"
                                                   class="upcoming-team-name-link"
                                                   tabindex="-1">
                                                    @match.AwayTeam
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                }
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll("tr.upcoming-match-row").forEach(function(row) {
            row.addEventListener("click", function(e) {
                if (e.target.tagName === 'A') return;
                window.location.href = row.getAttribute("data-href");
            });
            row.addEventListener("keydown", function(e) {
                if (e.key === "Enter" || e.key === " ") {
                    window.location.href = row.getAttribute("data-href");
                }
            });
            row.setAttribute("tabindex", "0");
            row.setAttribute("role", "button");
            row.setAttribute("aria-label", "View match details");
        });
    });
</script>