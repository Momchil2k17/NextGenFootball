@using NextGenFootball.Web.ViewModels.League
@model LeagueDetailsViewModel

@{
    ViewData["Title"] = "League Details";
    var canEdit = User.IsInRole("Admin") || User.IsInRole("LeagueManager");
}

<link rel="stylesheet" href="~/css/leaguedetails.css" />

<h2 class="league-details-header d-flex align-items-center mb-4">
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.Name" class="league-details-header-img me-2" />
    }
    <span>@Model.Name</span>
</h2>

<div class="row league-details-main-row mb-4">
    <div class="col-md-7 league-details-standings d-flex align-items-stretch order-1 order-md-1">
        <div class="standings-scale-down w-100">
            @await Html.PartialAsync("_LeagueStandings", Model.Standings)
        </div>
    </div>
    <div class="col-md-5 d-flex flex-column order-2 order-md-2">
        <div class="flex-grow-1 d-flex align-items-stretch">
            @await Html.PartialAsync("_TopGoalscorers", Model.TopGoalscorers)
        </div>
    </div>
</div>
<div class="row">
    <div class="col-11 ms-2">
        @await Html.PartialAsync("_UpcomingMatchesByRound", Model.UpcomingMatches)
    </div>
</div>