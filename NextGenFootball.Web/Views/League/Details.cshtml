@using NextGenFootball.Web.ViewModels.League
@model LeagueDetailsViewModel

@{
    ViewData["Title"] = "League Details";
}

<h2>@Model.Name</h2>

@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
{
    <div class="mb-3">
        <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:300px;max-height:200px;" class="img-fluid rounded" />
    </div>
}

<dl class="row">
    <dt class="col-sm-3">Region</dt>
    <dd class="col-sm-9">@Model.Region</dd>

    <dt class="col-sm-3">Age Group</dt>
    <dd class="col-sm-9">@Model.AgeGroup</dd>

    <dt class="col-sm-3">Season</dt>
    <dd class="col-sm-9">@Model.SeasonName</dd>

    @if (!string.IsNullOrWhiteSpace(Model.Description))
    {
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    }
</dl>

<div class="mb-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-secondary me-2">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

<hr />

@* Upcoming matches partial *@
@await Html.PartialAsync("_UpcomingMatchesByRound", Model.UpcomingMatches)

<hr />

@* Standings partial *@
@await Html.PartialAsync("_LeagueStandings", Model.Standings)

