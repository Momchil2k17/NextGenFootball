@model NextGenFootball.Web.ViewModels.League.LeagueDetailsViewModel

@{
    ViewData["Title"] = "Delete League";
}

<h2>Delete League</h2>

<h4>Are you sure you want to delete this league?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Region</dt>
        <dd class="col-sm-9">@Model.Region</dd>

        <dt class="col-sm-3">Age Group</dt>
        <dd class="col-sm-9">@Model.AgeGroup</dd>

        <dt class="col-sm-3">Season</dt>
        <dd class="col-sm-9">@Model.SeasonName</dd>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 300px; max-height: 200px;" class="img-fluid rounded" />
            </dd>
        }
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Region" />
    <input type="hidden" asp-for="AgeGroup" />
    <input type="hidden" asp-for="SeasonName" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>