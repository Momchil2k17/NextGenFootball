@using NextGenFootball.Web.ViewModels.Stadium
@model StadiumDeleteViewModel

@{
    ViewData["Title"] = "Delete Stadium";
}

<h1>Delete Stadium</h1>

<h3>Are you sure you want to delete this stadium?</h3>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>
    </dl>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-width: 300px; max-height: 200px;" />
        </div>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Capacity" />
    <input type="hidden" asp-for="Name" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>