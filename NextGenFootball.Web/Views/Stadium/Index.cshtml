@using NextGenFootball.Web.ViewModels.Stadium
@model IEnumerable<StadiumIndexViewModel>

@{
    ViewData["Title"] = "Stadiums";
}

<h1 class="mb-4">Stadiums</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Address</th>
            <th>Capacity</th>
            <th>Surface</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stadium in Model)
        {
            <tr>
                <td>@stadium.Name</td>
                <td>@stadium.Description</td>
                <td>@stadium.Address</td>
                <td>@stadium.Capacity</td>
                <td>@stadium.Surface</td>
                <td>
                    @if (!string.IsNullOrEmpty(stadium.ImageUrl))
                    {
                        <img src="@stadium.ImageUrl" alt="@stadium.Name" style="max-width: 100px; max-height: 60px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@stadium.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@stadium.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@stadium.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Stadium</a>