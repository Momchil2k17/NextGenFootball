@using NextGenFootball.Web.ViewModels.Player;
@model PlayerDetailsViewModel

@{
    ViewData["Title"] = "Player Details";
}

<link rel="stylesheet" href="~/css/player-details.css" />

<div class="row player-details-row">
    <div class="col-md-5 text-center">
        <div class="player-card shadow-sm">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@($"{Model.FirstName} {Model.LastName}")" class="player-img mb-3" />
            }
            <h3 class="player-name mb-2">@Model.FirstName @Model.LastName</h3>
            <div class="player-meta mb-2">
                <span class="badge bg-primary me-2">@Model.Position</span>
                <span class="badge bg-secondary">
                    <span class="blue-sneaker">👟</span> @Model.PreferredFoot
                </span>
            </div>
            <p>
                <i class="fa-regular fa-calendar-days me-1"></i>
                <strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()
            </p>
            <div class="team-card-mini mt-4">
                <h5 class="mb-2">Team</h5>
                <div class="d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.TeamImageUrl))
                    {
                        <img src="@Model.TeamImageUrl" alt="@Model.TeamName" class="team-img-mini me-2" />
                    }
                    <span class="team-name">@Model.TeamName</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-7">
        <div class="stats-card shadow-sm">
            <h4 class="section-title mb-3">Statistics</h4>
            <table class="table table-borderless table-stats">
                <tr>
                    <th><i class="fa-solid fa-futbol"></i> Goals</th>
                    <td>@Model.Goals</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-handshake-angle"></i> Assists</th>
                    <td>@Model.Assists</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-square yellow-card"></i> Yellow Cards</th>
                    <td>@Model.YellowCards</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-square red-card"></i> Red Cards</th>
                    <td>@Model.RedCards</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<button type="button"
        class="btn btn-outline-primary player-details-back-btn mt-4"
        onclick="window.history.back();">
    <i class="bi bi-arrow-left"></i> Back
</button>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
}

