@model NextGenFootball.Web.ViewModels.Player.PlayerDeleteViewModel

@{
    ViewData["Title"] = "Delete Player";
}

<h2>Delete Player</h2>

<div>
    <h4>Are you sure you want to delete this player?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-2">Team</dt>
        <dd class="col-sm-10">@Model.TeamName</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FirstName" />
        <input type="hidden" asp-for="LastName" />
        <input type="hidden" asp-for="TeamName" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>