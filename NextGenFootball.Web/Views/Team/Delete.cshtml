@using NextGenFootball.Web.ViewModels.Team
@model TeamDeleteViewModel

@{
    ViewData["Title"] = "Delete Team";
}

<h1>Delete Team</h1>

<h3>Are you sure you want to delete this team?</h3>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Age Group</dt>
        <dd class="col-sm-10">@Model.AgeGroup</dd>

        <dt class="col-sm-2">League</dt>
        <dd class="col-sm-10">@Model.LeagueName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="AgeGroup" />
    <input type="hidden" asp-for="LeagueName" />
   

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>