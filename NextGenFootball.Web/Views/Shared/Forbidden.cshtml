@{
    Layout = null;
    var imageUrl = Url.Content("~/images/forbidden.png"); // Path for your custom 403 image
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>403 - Forbidden</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="@Url.Content("~/css/errorpages.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="zephyr-notfound-card p-5 shadow-lg rounded-4 text-center bg-white">
            <img src="@imageUrl" alt="Forbidden" class="zephyr-notfound-image mb-4" />
            <div class="zephyr-notfound-code mb-2">403</div>
            <div class="zephyr-notfound-message mb-4">
                Sorry, you do not have permission to access this page.
            </div>
            <a href="~/" class="btn btn-primary btn-lg rounded-pill me-2">
                <i class="bi bi-house-door"></i> Home
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-primary btn-lg rounded-pill">
                <i class="bi bi-arrow-left"></i> Go Back
            </a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
</body>
</html>