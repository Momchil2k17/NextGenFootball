@model NextGenFootball.Web.ViewModels.News.NewsDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}
<link rel="stylesheet" href="~/css/news-details.css">

<div class="news-details-card">
    <div class="news-details-body">
        <h2 class="news-details-title">@Model.Title</h2>
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="news-details-image" alt="@Model.Title" />
        }
        <div class="news-details-meta">
            Published on @Model.PublishedOn.ToString("dd MMM yyyy") by @Model.Author
        </div>
        <div class="news-details-divider"></div>
        <div class="news-details-content">@Model.Content</div>
    </div>
</div>

<div class="mt-3">
    <button type="button"
            class="btn btn-outline-primary news-details-back-btn"
            onclick="window.history.back();">
        <i class="bi bi-arrow-left"></i> Back
    </button>

    @if (User.IsInRole("Admin") || User.IsInRole("LeagueManager"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">
            <i class="bi bi-pencil"></i> Edit
        </a>
    }
</div>