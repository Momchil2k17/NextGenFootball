@{
    ViewData["Title"] = "All News";
}

<link rel="stylesheet" href="~/css/news-loading.css" />
<h2 class="mb-4">Latest News</h2>

<div class="mb-4 d-flex flex-row gap-2">
    <input id="news-search-box" type="text" class="form-control" placeholder="Search news..." />
</div>

<div id="news-loader" style="display:none; text-align:center; margin:1em 0;">
    <span class="spinner-border text-primary" role="status" aria-hidden="true"></span>
</div>
<div id="news-results"></div>
<div id="news-pagination" class="mt-3"></div>

@section Scripts {
    <script src="~/js/news-search.js"></script>
}