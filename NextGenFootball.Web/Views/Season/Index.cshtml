@using NextGenFootball.Web.ViewModels.Season
@model IEnumerable<SeasonIndexViewModel>

@{
    ViewData["Title"] = "All Seasons";
}

<h1>All Seasons</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Season</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Is Current</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td>@(item.IsCurrent ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No seasons found.</td>
            </tr>
        }
    </tbody>
</table>